# Production Environment Configuration
NODE_ENV=production
PORT=8000

# Database Configuration (MongoDB Atlas recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/rbcomputer_prod?retryWrites=true&w=majority
DB_NAME=rbcomputer_prod

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secure-production-jwt-secret-key-min-32-chars-change-this
JWT_REFRESH_SECRET=your-super-secure-production-refresh-secret-key-min-32-chars-change-this
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Email Configuration (Production Email Service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-production-app-password
EMAIL_FROM=noreply@rbcomputer.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=3600000
RATE_LIMIT_MAX=1000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# CORS Configuration (Update with your production frontend URL)
FRONTEND_URL=https://your-app.netlify.app

# Admin Configuration (CHANGE THESE IN PRODUCTION!)
ADMIN_EMAIL=admin@rbcomputer.com
ADMIN_PASSWORD=SecureAdminPassword123!

# Production Specific Settings
LOG_LEVEL=info
ENABLE_CORS=true
TRUST_PROXY=true

# Optional: External Services
# REDIS_URL=redis://localhost:6379
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret
