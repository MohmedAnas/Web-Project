# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=8000

# Database Configuration (UPDATE WITH YOUR ACTUAL MONGODB URI)
MONGODB_URI=mongodb://localhost:27017/rbcomputer
DB_NAME=rbcomputer

# JWT Configuration (These are fine to be public)
JWT_SECRET=rbcomputer-dev-jwt-secret-2024-local-development-key
JWT_REFRESH_SECRET=rbcomputer-dev-refresh-secret-2024-local-development-key
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Email Configuration (UPDATE WITH YOUR ACTUAL EMAIL CREDENTIALS)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM=noreply@rbcomputer.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=3600000
RATE_LIMIT_MAX=1000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Admin Configuration (UPDATE WITH SECURE PASSWORD)
ADMIN_EMAIL=admin@rbcomputer.com
ADMIN_PASSWORD=admin123

# Docker Compose Variables (for local development)
MONGO_USERNAME=admin
MONGO_PASSWORD=your-secure-local-password
